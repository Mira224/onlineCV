<h2>Change Password</h2>
<form action="/changePW/<%= user.id %>" method="post">
    <h3>
        <%= user.email %>
    </h3 >
    <div class="col-9">
        <div class="field">
           <label class="label">
               New Password
            </label>
            <div class="control">
                
                <input class="input" type="text" name="password" id="password" required>
            </div>
        </div>
<br>
        <div class="col-md-4">
            <div class="control">
                <button class="button" type="submit">Save</button>
            </div>
        </div>


    </div>



</form>