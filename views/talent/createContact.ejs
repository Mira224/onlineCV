<!--create.ejs-->
<form action="/cv/<%= cv.id %>/addContact" method="post">

    <div class="field">
        <label class="label">Name</label>
        <div class="control">
            <input class="input" type="text" name="name" id="name" value="<%= cv.name%>" required>
        </div>
    </div>

    <div class="field">
        <label class="label">Mobile Number</label>
        <div class="control">
            <input class="input" type="text" name="mobile" id="mobile" value="<%= cv.mobile%>" required>
        </div>
    </div>
    <div class="field">
        <label class="label">Email address</label>
        <div class="control">
            <input class="input" type="email" name="email" id="email" value="<%= cv.email%>" required>
        </div>
    </div>
    <div class="field">
        <label class="label">Objective</label>
        <div class="control">
            <textarea class="textarea" placeholder="Comment" type="text" name="ps" rows="3" value="" required><%= cv.ps%></textarea>
        </div>
    </div>
    
    <div class="field">
        <div class="control">
            <button class="button is-link" type="submit">Save</button>
        </div>
    </div>

</form>
