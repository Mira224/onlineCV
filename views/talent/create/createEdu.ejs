<form action="/cv/addEdu/<%= cv.id %>" method="post">
    <div class="col-9">
        <div id="eduFields" class="contentFields">
            <div class="field">
                <label class="label">School</label>
                <div class="control">
                    <input class="input" type="text" name="school" id="school" required>
                </div>
            </div>
            <div class="field">
                <label class="label">Major</label>
                <div class="control">
                    <input class="input" type="text" name="major" id="major" required>
                </div>
            </div>

            <div class="row justify-content-start">
                <div class="col-4">
                    <label class="label">Start Time</label>
                    <div class="control">
                        <input class="input" type="date" name="sTime" id="sTime" required>
                    </div>
                </div>
                <div class="col-4">
                    <label class="label">End Time</label>
                    <div class="control">
                        <input class="input" type="date" name="eTime" id="eTime" required>
                    </div>
                </div>
            </div>
            <div class="field">
                <label class="label">Description</label>
                <div class="control">
                    <textarea class="textarea" placeholder="Please describe the experience. eg. GPA, related courses, awards." type="text" name="description"
                        id="description" rows="5" required></textarea>
                </div>
            </div>
        </div>
<br>
        <div id="eduFields_placeholder">
        </div>
        <br>
        <div class="row">
            <div class="col-md-4">
                <div class="control">
                    <button class="button is-link" type="submit">Save</button>
                </div>
            </div>

            <div class="col-md-4 ms-auto">
                <div class="control">
                    <a class="button is-link" href="http://localhost:1337/cv/addWork/<%= cv.id %>">Skip</a>
                </div>
            </div>
        </div>

</form>
