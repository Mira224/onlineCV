<div class="row justify-content-between">
    <div class="col-6">
        <h2 id="content">Skills</h2>
    </div>
    <div class="col-6">
        <input type="button" value="addone" onclick="add()">
    </div>
</div>
<form action="/cv/addSkill/<%= cv.id %>" method="post">
    <div class="col-9">
        <% skills.forEach( function(skill) { %>
        <div id="skillFields" class="skillFields">
            <div class="field">
                <label class="label">Content</label>
                <div class="control">
                    <input class="input" type="text" name="content" id="content" value="<%= skill.content%>"  required>
                </div>
            </div>


            <div class="field">
                <label class="label">Level</label>
                <div class="control">
                    <input class="input" type="text" name="level" value="<%= skill.level%>" id="level">
                </div>
            </div>
        </div>
        <% }); %>
        <div id="skillFields_placeholder">
        </div>
        <br>
        <div class="row">
            <div class="col-md-4">
                <div class="control">
                    <button class="button is-link" type="submit">Save</button>
                </div>
            </div>

            <div class="col-md-4 ms-auto">
                <div class="control">
                    <a class="button is-link" href="http://localhost:1337/cv/content/<%= cv.id %>">Back</a>
                </div>
            </div>
        </div>

    </div>
</form>
<script>
    var addone = "content:" + document.getElementById("content") + "level:" + document.getElementById("level");
    function add() {
        let fields = document.getElementById('skillFields');
        let skillFields_placeholder = document.getElementById('skillFields_placeholder');
        skillFields_placeholder.innerHTML += fields.innerHTML; 
    }
</script>