<!--create.ejs-->
<form action="/edu/create" method="post">

    <div class="field">
        <label class="label">School</label>
        <div class="control">
            <input class="input" type="text" name="school" id="school" required>
        </div>
    </div>

   
    <div class="field">
        <label class="label">Start Time</label>
        <div class="control">
            <input class="input" type="date" name="sTime" id="sTime" required>
        </div>
    </div>
    <div class="field">
        <label class="label">End Time</label>
        <div class="control">
            <input class="input" type="date" name="eTime" id="eTime" required>
        </div>
    </div>
    <div class="field">
        <label class="label">Description</label>
        <div class="control">
            <textarea class="textarea" placeholder="Please describe the activity" type="text" name="description" rows="5" required></textarea>
        </div>
    </div>

    <div class="field">
        <div class="control">
            <button class="button is-link" type="submit">Save</button>
        </div>
    </div>

</form>