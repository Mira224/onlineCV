<form action="/cv/<%= cv.id %>/addSkill" method="post">

    <div class="field">
        <label class="label">Content</label>
        <div class="control">
            <input class="input" type="text" name="content" id="content" required>
        </div>
    </div>

   
    <div class="field">
        <label class="label">Level</label>
        <div class="control">
            <input class="input" type="text" name="Level" id="level">
        </div>
    </div>
    <a type="button" href="http://localhost:1337/cv/<%= cv.id %>/addSkill"
        class="btn btn-outline-warning">Add Skill</a>
    <div class="field">
        <div class="control">
            <button class="button is-link" type="submit">Save</button>
        </div>
    </div>

</form>