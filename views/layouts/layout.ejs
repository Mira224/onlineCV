<body class="is-preload">

  <div class="navbar-brand">
    <ul class="nav justify-content-end">
      <li class="nav-item">
        <a class="nav-link" href="http://localhost:1337/tips">CV Tips</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="http://localhost:1337/guide">User Guide</a>
      </li>


      <% if (req.session.role !='talent' && req.session.role !='admin' ) { %>
        <div class="buttons">
          <a class="button small" href='http://localhost:1337/user/register'>
            Register
          </a>
          <a class="button small" href='http://localhost:1337/user/login'>
            Log in
          </a>
        </div>
        <% } %>

          <% if (req.session.role=='talent' ) { %>
            <li class="nav-item">
              <a class="nav-link" href="http://localhost:1337/cv/create">Create CV</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="http://localhost:1337/cv/overview">My CV</a>
            </li>

            <% } %>

              <% if(req.session.role=='admin' ) {%>

                <li class="nav-item">
                  <a class="nav-link" href="http://localhost:1337/admin">Admin</a>
                </li>

                <% }%>
                  <% if (req.session.role) { %>

                    <form action="/user/logout" method="POST">
                      <div class="buttons">
                        <button type="submit" class="button small" style onclick="logout(this)">
                          Log out
                        </button>
                      </div>
                    </form>


                    <% } %>



    </ul>
  </div>

    <section class="container">

      <%- body %>
    </section>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"></script>
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
    <!--SCRIPTS-->
    <script src="/dependencies/sails.io.js"></script>
    <!--SCRIPTS END-->
 
</body>

</html>