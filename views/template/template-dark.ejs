<link rel="stylesheet" href="/css/dark.css" />

<body class="bg-light" id="top">
    <header class="d-print-none">
        <div class="container text-center text-lg-left">
            <div class="pt-4 clearfix">
                <h1 class="site-title mb-0">
                    <%= cv.name%>
                </h1>
                <div class="site-nav">
                    <nav role="navigation">
                        <ul class="nav justify-content-center">
                            <li class="nav-item"><a class="nav-link" href="#about" title="About"><span
                                        class="menu-title">About</span></a>
                            </li>
                            <li class="nav-item"><a class="nav-link" href="#education" title="Education"><span
                                        class="menu-title">Education</span></a>
                            </li>
                            <li class="nav-item"><a class="nav-link" href="#work" title="Work"><span
                                        class="menu-title">Work
                                        Experience</span></a>
                            </li>
                            <li class="nav-item"><a class="nav-link" href="#activity" title="Activity"><span
                                        class="menu-title">Activity Experience</span></a>
                            </li>
                            <li class="nav-item"><a class="nav-link" href="#skills" title="Skills"><span
                                        class="menu-title">Skills</span></a>
                            </li>
                            <li class="nav-item"><a class="nav-link" href="#references" title="References"><span
                                        class="menu-title">References</span></a>
                            </li>

                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <div class="page-content">
        <div class="container">
            <div class="resume-container">
                <div class="shadow-1-strong bg-white my-5" id="intro">
                    <div class="bg-info text-white">
                        <div class="cover bg-image">

                            <div class="mask" style="background-color: rgba(0, 0, 0, 0.7);backdrop-filter: blur(2px);">
                                <div class="text-center p-5">
                                    <div class="header-bio mt-3">
                                        <div data-aos="zoom-in" data-aos-delay="0">
                                            <h2 class="h1">
                                                <%= cv.name%>
                                            </h2>
                                        </div>
                                        <div class="d-print-none"><a
                                                class="btn btn-outline-light btn-lg shadow-sm mt-1 me-3" href="#"
                                                data-aos="fade-right" data-aos-delay="700">Download CV</a>
                                                <a
                                                class="btn btn-info btn-lg shadow-sm mt-1" href="mailto:<%=cv.email%>"
                                                data-aos="fade-left" data-aos-delay="700">Hire Me</a></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card shadow p-3 mb-5 bg-white rounded" id="about">
                    <div class="card-body about-section">
                        <div class="row">
                            <div class="col-md-6">
                                <h2 class="h2 fw-light mb-4">About Me</h2>
                                <p>
                                    <%= cv.ps%>
                                </p>
                            </div>

                        </div>
                    </div>
                </div>

                <div class="card shadow p-3 mb-5 bg-white rounded" id="education">
                    <div class="card-body education-section">
                        <h2 class="h2 fw-light mb-4">Education</h2>
                        <div class="timeline">
                            <% (edus || []).forEach( function(edu) { %>
                                <div class="timeline-card timeline-card-success" data-aos="fade-in" data-aos-delay="0">
                                    <div class="timeline-head px-4 pt-3">
                                        <div class="h5">
                                            <%= edu.major %> <span class="text-muted h6">from
                                                    <%= edu.school %>
                                                </span>
                                        </div>
                                    </div>
                                    <div class="timeline-body px-4 pb-4">
                                        <div class="text-muted text-small mb-3">
                                            <%= edu.sTime %> - <%= edu.eTime %>
                                        </div>
                                        <div>
                                            <%= edu.description %>
                                        </div>
                                    </div>
                                </div>
                                <% }); %>
                        </div>
                    </div>
                </div>
                <div class="card shadow p-3 mb-5 bg-white rounded" id="work">
                    <div class="card-body work-experience-section">
                        <h2 class="h2 fw-light mb-4">Work Experience</h2>
                        <div class="timeline">
                            <% (works || []).forEach( function(work) { %>
                                <div class="timeline-card timeline-card-info" data-aos="fade-in" data-aos-delay="0">
                                    <div class="timeline-head px-4 pt-3">
                                        <div class="h5">
                                            <%= work.position %> <span class="text-muted h6">at Creative
                                                    <%= work.org %>
                                                </span>
                                        </div>
                                    </div>
                                    <div class="timeline-body px-4 pb-4">
                                        <div class="text-muted text-small mb-3">
                                            <%= work.sTime %> - <%= work.eTime %>
                                        </div>
                                        <div>
                                            <%= work.description %>
                                        </div>
                                    </div>
                                </div>
                                <% }); %>

                        </div>
                    </div>
                </div>



                <div class="card shadow p-3 mb-5 bg-white rounded" id="activity">
                    <div class="card-body activity-section">
                        <h2 class="h2 fw-light mb-4">Activity Experience</h2>
                        <div class="timeline">
                            <% (activities || []).forEach( function(activity) { %>
                                <div class="timeline-card timeline-card-info" data-aos="fade-in" data-aos-delay="0">
                                    <div class="timeline-head px-4 pt-3">
                                        <div class="h5">
                                            <%= activity.title %> <span class="text-muted h6">at <%= activity.org %>
                                                </span>
                                        </div>
                                    </div>
                                    <div class="timeline-body px-4 pb-4">
                                        <div class="text-muted text-small mb-3">
                                            <%= activity.sTime %> - <%= activity.eTime %>
                                        </div>
                                        <div>
                                            <%= activity.description %>
                                        </div>
                                    </div>
                                </div>
                                <% }); %>


                        </div>


                    </div>
                </div>

                <div class="card shadow p-3 mb-5 bg-white rounded" id="skills">
                    <div class="card-body skills-section">
                        <h2 class="h2 fw-light mb-4">Professional Skills</h2>
                        <div class="row">
                            <div class="col-md-6">
                                <% (skills || []).forEach( function(skill) { %>
                                    <div class="mb-3"><span class="fw-bolder">
                                            <%= skill.content %>
                                        </span>
                                        <span>( <%=skill.level %> )</span>

                                    </div>
                                    <% }); %>

                            </div>
                        </div>
                    </div>
                </div>


                <div class="shadow-1-strong bg-white my-5 p-5" id="references">
                    <div class="reference-section">
                        <h2 class="h2 fw-light mb-4">References</h2>
                        <div class="row">
                            <% (refs || []).forEach( function(ref) { %>
                            <div class="col-md-6">
                                <div class="d-flex mb-2">
                                    <div class="header-bio m-3 mb-0">
                                        <h3 class="h6 mb-1" data-aos="fade-left" data-aos-delay="0"> <%=ref.name %> </h3>
                                        <p class="text-muted text-small" data-aos="fade-left" data-aos-delay="100"><%=ref.relationship %></p>
                                    </div>
                                </div>
                                <div class="d-flex"><i class="text-secondary fas fa-quote-left"></i>
                                    <p class="lead mx-2" data-aos="fade-left" data-aos-delay="100"><%=ref.comment %></p>
                                </div>
                            </div>
                            <% }); %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <button onclick="window.print();">Download cv <i class="fa fa-download"></i></button>